<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.cem.modules.cem.dao.TaskTemplateDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.cem.modules.cem.entity.TaskTemplateEntity" id="taskTemplateMap">
        <result property="id" column="id"/>
        <result property="name" column="tt_name"/>
        <result property="serviceType" column="service_type"/>
        <result property="schPolicyId" column="sch_policy_id"/>
        <result property="templateParam" column="template_param"/>
        <result property="alarmTemplateId" column="alarm_template_id"/>
        <result property="remark" column="remark"/>
    </resultMap>

	<select id="queryObject" resultMap="taskTemplateMap">
		select * from task_template where id = #{value}
	</select>

	<select id="queryList" resultMap="taskTemplateMap">
		select * from task_template
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from task_template 
	</select>
	 
	<insert id="save" parameterType="io.cem.modules.cem.entity.TaskTemplateEntity" useGeneratedKeys="true" keyProperty="id">
		insert into task_template
		(
			`tt_name`,
			`service_type`, 
			`sch_policy_id`, 
			`template_param`, 
			`alarm_template_id`, 
			`remark`
		)
		values
		(
			#{name}, 
			#{serviceType}, 
			#{schPolicyId}, 
			#{templateParam}, 
			#{alarmTemplateId}, 
			#{remark}
		)
	</insert>
	 
	<update id="update" parameterType="io.cem.modules.cem.entity.TaskTemplateEntity">
		update task_template 
		<set>
			<if test="name != null">`tt_name` = #{name}, </if>
			<if test="serviceType != null">`service_type` = #{serviceType}, </if>
			<if test="schPolicyId != null">`sch_policy_id` = #{schPolicyId}, </if>
			<if test="templateParam != null">`template_param` = #{templateParam}, </if>
			<if test="alarmTemplateId != null">`alarm_template_id` = #{alarmTemplateId}, </if>
			<if test="remark != null">`remark` = #{remark}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from task_template where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from task_template where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>