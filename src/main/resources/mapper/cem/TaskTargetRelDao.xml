<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.cem.modules.cem.dao.TaskTargetRelDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.cem.modules.cem.entity.TaskTargetRelEntity" id="taskTargetRelMap">
        <result property="id" column="id"/>
        <result property="taskId" column="task_id"/>
        <result property="targetType" column="target_type"/>
        <result property="targetId" column="target_id"/>
        <result property="port" column="port"/>
        <result property="remark" column="remark"/>
    </resultMap>

	<select id="queryObject" resultType="io.cem.modules.cem.entity.TaskTargetRelEntity">
		select * from task_target_rel where id = #{value}
	</select>

	<select id="queryList" resultType="io.cem.modules.cem.entity.TaskTargetRelEntity">
		select * from task_target_rel
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from task_target_rel 
	</select>
	 
	<insert id="save" parameterType="io.cem.modules.cem.entity.TaskTargetRelEntity" useGeneratedKeys="true" keyProperty="id">
		insert into task_target_rel
		(
			`task_id`, 
			`target_type`, 
			`target_id`, 
			`port`, 
			`remark`
		)
		values
		(
			#{taskId}, 
			#{targetType}, 
			#{targetId}, 
			#{port}, 
			#{remark}
		)
	</insert>

	<update id="update"  parameterType="io.cem.modules.cem.entity.TaskTargetRelEntity">
		update task_target_rel
		<set>
			<if test="taskId != null">`task_id` = #{taskId}, </if>
			<if test="targetType != null">`target_type` = #{targetType}, </if>
			<if test="targetId != null">`target_id` = #{targetId}, </if>
			<if test="port != null">`port` = #{port}, </if>
			<if test="remark != null">`remark` = #{remark}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from task_target_rel where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from task_target_rel where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>