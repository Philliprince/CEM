<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.cem.modules.cem.dao.DicDataDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.cem.modules.cem.entity.DicDataEntity" id="dicDataMap">
        <result property="id" column="id"/>
        <result property="dicTypeId" column="dic_type_id"/>
        <result property="dataId" column="data_id"/>
        <result property="dataName" column="data_name"/>
        <result property="remark" column="remark"/>
    </resultMap>

	<select id="queryObject" resultType="io.cem.modules.cem.entity.DicDataEntity">
		select * from dic_data where id = #{value}
	</select>

	<select id="queryList" resultType="io.cem.modules.cem.entity.DicDataEntity">
		select * from dic_data
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from dic_data 
	</select>
	 
	<insert id="save" parameterType="io.cem.modules.cem.entity.DicDataEntity" useGeneratedKeys="true" keyProperty="id">
		insert into dic_data
		(
			`dic_type_id`, 
			`data_id`, 
			`data_name`, 
			`remark`
		)
		values
		(
			#{dicTypeId}, 
			#{dataId}, 
			#{dataName}, 
			#{remark}
		)
	</insert>
	 
	<update id="update" parameterType="io.cem.modules.cem.entity.DicDataEntity">
		update dic_data 
		<set>
			<if test="dicTypeId != null">`dic_type_id` = #{dicTypeId}, </if>
			<if test="dataId != null">`data_id` = #{dataId}, </if>
			<if test="dataName != null">`data_name` = #{dataName}, </if>
			<if test="remark != null">`remark` = #{remark}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from dic_data where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from dic_data where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>