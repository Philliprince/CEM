	<select id="queryObject" resultType="io.cem.modules.cem.entity.RecordPppoeEntity">
		select * from record_pppoe where id = #{value}
	</select>

	<select id="queryList" resultType="io.cem.modules.cem.entity.RecordPppoeEntity">
		select * from record_pppoe
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="queryPppoe" resultType="io.cem.modules.cem.entity.RecordHourPppoeEntity">
		select rp.probe_id AS probe_id,
		rp.port AS port,
		rp.task_id AS task_id,
		rp.service_type AS service_type,
		rp.target_id AS target_id,
		rp.target_ip AS target_ip,
		rp.record_time AS record_time,
		rp.record_date AS record_date,
		probe.city_id AS city_id,
		probe.county_id AS county_id,
		AVG(rp.delay) AS delay,
		AVG(rp.drop_rate) AS drop_rate,
		AVG(rp.success_rate) AS success_rate,
		rp.remark AS remark
		FROM record_pppoe rp
		LEFT JOIN probe
		ON  rp.probe_id =probe.id
		WHERE rp.record_date = #{record_date}
		AND rp.record_time BETWEEN #{start_time} AND #{terminal_time}
		AND rp.state = 0
		GROUP BY rp.port,rp.service_type,rp.target_id,rp.task_id,rp.probe_id;
	</select>

	<select id="queryDay" resultType="io.cem.modules.cem.entity.RecordDayPppoeEntity">
		select rp.probe_id AS probe_id,
		rp.port AS port,
		rp.task_id AS task_id,
		rp.service_type AS service_type,
		rp.target_id AS target_id,
		rp.target_ip AS target_ip,
		rp.record_time AS record_time,
		rp.record_date AS record_date,
		probe.city_id AS city_id,
		probe.county_id AS county_id,
		AVG(rp.delay) AS delay,
		AVG(rp.drop_rate) AS drop_rate,
		AVG(rp.success_rate) AS success_rate,
		rp.remark AS remark
		FROM record_pppoe rp
		LEFT JOIN probe
		ON  rp.probe_id =probe.id
		WHERE rp.record_date = #{record_date}
		AND rp.state = 0
		GROUP BY rp.port,rp.service_type,rp.target_id,rp.task_id,rp.probe_id;
	</select>
	
	<select id="queryPppoeTest" resultType="io.cem.modules.cem.entity.RecordPppoeEntity">
		select record_pppoe.*,
		probe.probe_name AS probe_name,
		target.target_name AS target_name,
		target.value AS targetip_name
		FROM record_pppoe
		LEFT JOIN probe
		ON  record_pppoe.probe_id =probe.id
		LEFT JOIN target
		ON record_pppoe.target_id = target.id
		WHERE
		record_pppoe.dispatch_id = #{dispatch_id}
		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by id desc
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
