<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.cem.modules.cem.dao.CitiesDao">

	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap type="io.cem.modules.cem.entity.CitiesEntity" id="citiesMap">
		<result property="id" column="id"/>
		<result property="city_id" column="city_id"/>
		<result property="city" column="city"/>
		<result property="province_id" column="province_id"/>
	</resultMap>

	<select id="queryObject" resultType="io.cem.modules.cem.entity.CitiesEntity">
		select * from city where id = #{value}
	</select>

	<select id="queryList" resultType="io.cem.modules.cem.entity.CitiesEntity">
		select * from city
		<choose>
			<when test="sidx != null and sidx.trim() != ''">
				order by ${sidx} ${order}
			</when>
			<otherwise>
				order by id
			</otherwise>
		</choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>

	<select id="queryTotal" resultType="int">
		select count(*) from city
	</select>

	<insert id="save" parameterType="io.cem.modules.cem.entity.CitiesEntity" useGeneratedKeys="true" keyProperty="id">
		insert into city
		(
			`city_id`,
			`city`,
			`province_id`
		)
		values
		(
			#{city_id},
			#{city},
			#{province_id}
		)
	</insert>

	<update id="update" parameterType="io.cem.modules.cem.entity.CitiesEntity">
		update city
		<set>
			<if test="city_id != null">`city_id` = #{city_id}, </if>
			<if test="city != null">`city` = #{city}, </if>
			<if test="province_id != null">`province_id` = #{province_id}</if>
		</set>
		where id = #{id}
	</update>

	<delete id="delete">
		delete from city where id = #{value}
	</delete>

	<delete id="deleteBatch">
		delete from city where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>