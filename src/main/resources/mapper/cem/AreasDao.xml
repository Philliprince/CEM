<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.cem.modules.cem.dao.AreasDao">

	<!-- 可根据自己的需求，是否要使用 -->
	<resultMap type="io.cem.modules.cem.entity.AreasEntity" id="areasMap">
		<result property="id" column="id"/>
		<result property="area_id" column="area_id"/>
		<result property="area" column="area"/>
		<result property="city_id" column="city_id"/>
	</resultMap>

	<select id="queryObject" resultType="io.cem.modules.cem.entity.AreasEntity">
		select * from county where id = #{value}
	</select>

	<select id="queryAreaList" resultType="io.cem.modules.cem.entity.AreasEntity">
		select * from county where city_id = #{value}
        order by id
	</select>

	<select id="queryTotal" resultType="int">
		select count(*) from county
	</select>

	<insert id="save" parameterType="io.cem.modules.cem.entity.AreasEntity" useGeneratedKeys="true" keyProperty="id">
		insert into county
		(
			`area_id`, 
			`area`, 
			`city_id`
		)
		values
		(
			#{area_id}, 
			#{area}, 
			#{city_id}
		)
	</insert>

	<update id="update" parameterType="io.cem.modules.cem.entity.AreasEntity">
		update county
		<set>
			<if test="area_id != null">`area_id` = #{area_id}, </if>
			<if test="area != null">`area` = #{area}, </if>
			<if test="city_id != null">`city_id` = #{city_id}</if>
		</set>
		where id = #{id}
	</update>

	<delete id="delete">
		delete from county where id = #{value}
	</delete>

	<delete id="deleteBatch">
		delete from county where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>